---
import { Monitor, Smartphone, Cpu, ArrowRight } from "lucide-react";
import servicesData from "../../data/services.json";

const IconMap: any = {
  Monitor,
  Smartphone,
  Cpu,
};
---

<section
  id="services"
  class="py-24 px-6 relative z-10 border-t border-brand-primary/5"
>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <div class="overflow-hidden">
        <h2
          class="text-4xl md:text-5xl font-bold mb-4 text-white animate-reveal-text"
        >
          The RezCode Ecosystem
        </h2>
      </div>
      <p
        class="text-brand-secondary max-w-2xl mx-auto text-lg"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Premium digital engineering services that elevate your brand beyond
        industry standards.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {
        servicesData.map((service) => {
          const Icon = IconMap[service.icon];
          return (
            <a
              href="#contact"
              data-aos="fade-up"
              data-aos-delay={service.delay}
              class="block glow-card group p-8 rounded-3xl bg-brand-dark/50 backdrop-blur-sm border border-brand-primary/10 hover:border-brand-primary/50 transition-all cursor-pointer relative overflow-hidden flex flex-col h-full hover:-translate-y-2"
            >
              <div class="absolute inset-0 bg-brand-primary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none" />
              <div
                class={`w-14 h-14 rounded-2xl bg-${service.color}/20 flex items-center justify-center text-${service.color} mb-6 group-hover:scale-110 transition-transform relative z-10 shadow-lg shadow-${service.color}/20`}
              >
                <Icon className="w-7 h-7" />
              </div>
              <h3 class="text-xl font-bold text-white mb-3 relative z-10 group-hover:text-brand-primary transition-colors">
                {service.title}
              </h3>
              <p class="text-brand-secondary leading-relaxed mb-6 relative z-10">
                {service.description}
              </p>

              <ul class="space-y-2 mb-6 relative z-10">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-brand-light/70">
                    <div class="w-1.5 h-1.5 rounded-full bg-brand-primary" />{" "}
                    {feature}
                  </li>
                ))}
              </ul>

              <div class="mt-auto flex items-center gap-2 text-brand-primary font-bold text-sm uppercase tracking-wider opacity-0 group-hover:opacity-100 transition-all translate-y-2 group-hover:translate-y-0">
                Start Project <ArrowRight className="w-4 h-4" />
              </div>
            </a>
          );
        })
      }
    </div>
  </div>
</section>
