---
import {
  MessageCircle,
  Mail,
  ArrowRight,
  Instagram,
  Video,
  Youtube,
  Facebook,
  Linkedin,
  Github,
} from "lucide-react";
import contactData from "../../data/contact.json";

const IconMap: any = {
  MessageCircle,
  Mail,
  ArrowRight,
  Instagram,
  Video,
  Youtube,
  Facebook,
  Linkedin,
  Github,
};
---

<section
  id="contact"
  class="pt-32 pb-10 px-6 bg-gradient-to-b from-brand-dark to-[#050810] relative overflow-hidden"
>
  <div class="max-w-6xl mx-auto">
    <!-- Main Contact Card -->
    <div
      data-aos="fade-up"
      class="bg-brand-primary/5 border border-brand-primary/20 rounded-[3rem] p-8 md:p-16 text-center relative overflow-hidden mb-24 glow-card"
    >
      <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-brand-primary/5 blur-[80px] rounded-full -z-10"
      >
      </div>

      <div class="overflow-hidden">
        <h2
          class="text-5xl md:text-7xl font-black text-white mb-8 tracking-tighter animate-reveal-text"
        >
          Let's Talk Business?
        </h2>
      </div>
      <p
        class="text-brand-secondary text-xl mb-12 max-w-2xl mx-auto"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Have a visionary idea? We have the engineering muscle to build it. Reach
        out directly.
      </p>

      <div
        class="flex flex-col sm:flex-row gap-6 justify-center items-center"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        {
          contactData.channels.map((channel) => {
            const Icon = IconMap[channel.icon];
            return (
              <a
                href={channel.href}
                target={channel.href.startsWith("http") ? "_blank" : "_self"}
                class={`px-8 py-4 ${channel.color} font-bold rounded-2xl hover:brightness-110 hover:scale-105 transition-all flex items-center gap-3 ${channel.shadow}`}
              >
                <Icon className="w-6 h-6" />
                {channel.label}
              </a>
            );
          })
        }
      </div>
    </div>

    <!-- Footer Grid -->
    <div
      class="grid md:grid-cols-4 gap-12 border-t border-brand-primary/10 pt-16"
    >
      <div class="col-span-2" data-aos="fade-up">
        <div class="text-2xl font-black text-white mb-6">
          Rez<span class="text-brand-primary">Code</span>
        </div>
        <p class="text-brand-secondary max-w-sm mb-8">
          Forging digital realities with precision engineering and futuristic
          design. Jakarta, Indonesia.
        </p>
        <div class="text-sm text-brand-secondary/50">
          Â© 2026 RezCode Agency. All rights reserved.
        </div>
      </div>

      <div data-aos="fade-up" data-aos-delay="100">
        <h4 class="text-white font-bold mb-6">Sitemap</h4>
        <ul class="space-y-4 text-brand-secondary">
          {
            contactData.sitemap.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="hover:text-brand-primary hover:translate-x-1 transition-all inline-block"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div data-aos="fade-up" data-aos-delay="200">
        <h4 class="text-white font-bold mb-6">Connect</h4>
        <div class="grid grid-cols-4 gap-4">
          {
            contactData.socials.map((social) => {
              const Icon = IconMap[social.icon];
              return (
                <a
                  href={social.href}
                  class="w-10 h-10 rounded-full bg-brand-dark border border-brand-primary/20 flex items-center justify-center text-brand-secondary hover:bg-brand-primary hover:text-white hover:scale-110 hover:-translate-y-1 transition-all"
                >
                  <Icon className="w-5 h-5" />
                </a>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>
